---
import Data from "../config/features.json";
---

<div class="bg-zinc-800">
  <h1 class="text-center font-bold text-5xl mt-10">Features</h1>
  <img src="favicon.svg" alt="favicon" class="w-20 m-auto" />
  <div class="grid md:grid-cols-3 gap-2 p-2">
    {
      Data.map((x) => (
        <>
          <div class="bg-teal-800 p-4 rounded-xl">
            <h2 class="text-2xl font-bold my-2">{x.title}</h2>
            <p>{x.descripcion}</p>
          </div>
        </>
      ))
    }
  </div>
</div>
