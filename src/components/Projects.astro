---
import Data from "../config/projects.json";
---

<h2 class="font-bold text-3xl my-3 text-center">PROYECTOS:</h2>
{
  Data[0].proyectos.map((proyecto) => (
    <div class="flex flex-col md:flex-row text-center">
      {/* Aquí se usa flex-col para apilar verticalmente en pantallas pequeñas */}
      <div class="flex-1 bg-cyan-800 my-5 p-6 rounded-lg md:order-2">
        {/* Se usa md:order-2 para cambiar el orden en pantallas md */}
        <h2 class="text-2xl font-bold px-5">{proyecto.title}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2">
          <p>{proyecto.descripcion}</p>

          {/* Se usa md:order-1 para cambiar el orden en pantallas md */}
          <img src={proyecto.image} class="w-16 m-auto" />
        </div>
        <button class="bg-indigo-500 px-3 py-2 mt-4 hover:bg-indigo-900">
          PROYECTOS
        </button>
      </div>
    </div>
  ))
}
<h2 class="font-bold text-3xl my-3 text-center">LOGROS:</h2>
{
  Data[0].logros.map((logro) => (
    <div class="flex flex-col md:flex-row text-center">
      {/* Aquí se usa flex-col para apilar verticalmente en pantallas pequeñas */}
      <div class="flex-1 bg-cyan-800 my-5 p-6 rounded-lg md:order-2">
        {/* Se usa md:order-2 para cambiar el orden en pantallas md */}
        <h2 class="text-2xl font-bold px-5">{logro.numero}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2">
          <p>{logro.descripcion}</p>
          {/* Se usa md:order-1 para cambiar el orden en pantallas md */}
          <img src={logro.image} class="w-16 m-auto" />
        </div>
        <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-900 mt-4">
          LOGROS
        </button>
      </div>
    </div>
  ))
}
